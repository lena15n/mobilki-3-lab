<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_most_frequent_activities"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lena.timetracker.MaxTotalTimeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/max_layout2">

        <TextView
            android:text="@string/stat_for_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp"
            android:id="@+id/max_period_textView"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/max_period_textView"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            style="@style/FontStat"
            android:id="@+id/max_desc_textView"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/max_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/max_layout2"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/max_start_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="8dp"
            android:text="@string/record_start"/>

        <TextView
            android:id="@+id/max_record_set_start_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="13dp"
            android:text="@string/record_tap_to_set_start"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/freq_layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/max_layout3"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/freq_end_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="8dp"
            android:text="@string/record_end"/>

        <TextView
            android:id="@+id/freq_set_end_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="13dp"
            android:text="@string/record_tap_to_set_end"/>

    </RelativeLayout>

    <Button
        android:text="@string/choose_period_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_period_button"
        android:layout_below="@+id/freq_layout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"/>

</RelativeLayout>
